extends layout

block content
    h1=title
    p
        a(href="../") Home
    if results.length
        table(border="1")
            thead   
                tr
                    th firstName
                    th lastName
                    th department
                    th startDate
                    th jobTitle
                    th salary
                    th 
                    th
            tbody 
              each stuff in results
                tr
                    td 
                        =stuff.firstName
                    td 
                        =stuff.lastName
                    td 
                        =stuff.department
                    td 
                        =stuff.startDate.toDateString()
                    td 
                        =stuff.jobTitle
                    td 
                        =stuff.salary
                    td
                        a(href="../update/"+stuff._id) Update
                    td
                        a(href="../delete/"+stuff._id) Delete
    else
        p No results found